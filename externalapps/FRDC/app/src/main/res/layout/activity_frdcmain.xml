<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".FRDCMain">

    <TextView android:text="@string/app_name" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Pic!"
        android:id="@+id/cmdTakePic"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enroll Person"
        android:id="@+id/cmdEnroll"
        android:layout_alignTop="@+id/cmdTakePic"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recognize"
        android:id="@+id/cmdRecog"
        android:layout_alignTop="@+id/cmdEnroll"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Album"
        android:id="@+id/cmdSaveAlbum"
        android:layout_below="@+id/cmdTakePic"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/txtResult"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/cmdBenchEnroll"
        android:layout_toStartOf="@+id/cmdTestUnlock" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Unlock"
        android:id="@+id/cmdTestUnlock"
        android:layout_below="@+id/cmdEnroll"
        android:layout_alignEnd="@+id/cmdRecog" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/cmdReset"
        android:layout_alignTop="@+id/cmdTestUnlock"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bench Enroll"
        android:id="@+id/cmdBenchEnroll"
        android:layout_below="@+id/cmdSaveAlbum"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bench Recog"
        android:id="@+id/cmdBenchRecog"
        android:layout_alignBottom="@+id/cmdBenchEnroll"
        android:layout_alignStart="@+id/cmdReset" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDB"
        android:layout_below="@+id/cmdBenchRecog"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/cmdRecog" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Pic"
        android:id="@+id/cmdSavePic"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/txtDB" />


</RelativeLayout>
